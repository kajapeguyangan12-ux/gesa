rules_version = '2';

// DEVELOPMENT MODE - Allow all access
// ⚠️ CHANGE THIS IN PRODUCTION!
service firebase.storage {
  match /b/{bucket}/o {
    // Allow all read and write for development
    match /{allPaths=**} {
      allow read, write: if true;
    }
    
    // Specifically allow survey-existing folder
    match /survey-existing/{fileName} {
      allow read, write: if true;
    }
    
    // Specifically allow survey-apj-propose folder
    match /survey-apj-propose/{fileName} {
      allow read, write: if true;
    }
  }
}

