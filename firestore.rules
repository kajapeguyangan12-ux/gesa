rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // DEVELOPMENT MODE - Allow all access
    // ⚠️ CHANGE THIS IN PRODUCTION!
    match /{document=**} {
      allow read, write: if true;
    }
  }
}

